<?xml version="1.0" encoding="utf-8"?>
<objectAnimator
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:propertyName="rotation"
        android:duration="1000"
        android:valueFrom="0"
        android:valueTo="-180"
        android:valueType="floatType"
        android:repeatCount="1"
        android:repeatMode="reverse"/>

        <!--
            android:propertyName="rotation"      Rotates the object clockwise or anti-clockwise
            android:propertyName="rotationX"     Rotates the object along the X-Axis
            android:propertyName="rotationY"     Rotates the Object along the Y-Axis
        -->
